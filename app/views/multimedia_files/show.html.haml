- model_class = Video
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @video.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @video.description
%p
  %strong= model_class.human_attribute_name(:provider) + ':'
  %br
  = @video.provider
%p
  %strong= model_class.human_attribute_name(:url) + ':'
  %br
  = @video.url
%p
  %strong= model_class.human_attribute_name(:owner_id) + ':'
  %br
  = @video.owner_id
%p
  %strong= model_class.human_attribute_name(:album_id) + ':'
  %br
  = @video.album_id


= link_to t('.back', :default => t("helpers.links.back")), multimedia_file_videos_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_multimedia_file_video_path(@video), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), multimedia_file_video_path(@video), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
